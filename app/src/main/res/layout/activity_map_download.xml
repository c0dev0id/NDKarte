<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#1A237E"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:text="â†"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="Map Downloads"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Legend bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        android:background="#E8EAF6"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <View android:layout_width="12dp" android:layout_height="12dp" android:background="#CFD8DC" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Not downloaded" android:textSize="10sp" android:textColor="#546E7A"
            android:layout_marginStart="4dp" android:layout_marginEnd="12dp" />

        <View android:layout_width="12dp" android:layout_height="12dp" android:background="#64B5F6" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Downloading" android:textSize="10sp" android:textColor="#546E7A"
            android:layout_marginStart="4dp" android:layout_marginEnd="12dp" />

        <View android:layout_width="12dp" android:layout_height="12dp" android:background="#81C784" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Downloaded" android:textSize="10sp" android:textColor="#546E7A"
            android:layout_marginStart="4dp" android:layout_marginEnd="12dp" />

        <View android:layout_width="12dp" android:layout_height="12dp" android:background="#FFB74D" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Paused" android:textSize="10sp" android:textColor="#546E7A"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Interactive world map -->
    <com.ndkarte.app.InteractiveMapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Active downloads panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ECEFF1"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvPanelHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Tap a region on the map to download it."
            android:textSize="12sp"
            android:textColor="#546E7A"
            android:visibility="visible" />

        <ScrollView
            android:id="@+id/downloadsScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="180dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/downloadsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
